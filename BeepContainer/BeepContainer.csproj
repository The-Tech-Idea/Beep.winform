<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>TheTechIdea.Beep.Containers</RootNamespace>
	  <LangVersion>Latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="7.0.0" />
    <PackageReference Include="TheTechIdea.Beep.AssemblyLoader" Version="1.0.5" />
    <PackageReference Include="TheTechIdea.Beep.DataManagementEngine" Version="1.0.20" />
    <PackageReference Include="TheTechIdea.Beep.DataManagementModels" Version="1.0.14" />
    <PackageReference Include="TheTechIdea.Beep.DMLogger" Version="1.0.0" />
    <PackageReference Include="TheTechIdea.Beep.JsonLoader" Version="1.0.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BeepContainersModel\BeepContainersModel.csproj" />
  </ItemGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Copy SourceFiles="$(TargetDir)$(PackageId).dll" DestinationFolder="$(ProjectDir)..\..\outputDLL\$(PackageId)" SkipUnchangedFiles="false" />
	</Target>
</Project>
